<div class="container" style="margin-bottom: 100px;">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4">
    <% @dogs.each_with_index do |dog, index| %>
      <% if index % 2 == 0 && index != 0 %>
        <%= render 'dogs/ad' %>
      <% end %>
      <%= render 'dogs/thumbnail', dog: dog %>
    <% end %>
  </div>
</div>

<navbar class="navbar fixed-bottom navbar-light bg-light justify-content-center">
  <nav aria-label="Page navigation">
    <ul class="pagination">
      <% if @page > 0 %>
        <li class="page-item"><a class="page-link" href="/dogs?page=<%= @page - 1%>">Previous</a></li>
      <% end %>
      <% @dog_count.times do |index| %>
        <% page = index %>
        <% klass = "page-item"%>
        <% klass += " active" if index == @page %>
        <li class="<%= klass %>">
          <%= link_to (page + 1).to_s, dogs_path(page: page), class: 'page-link' %>
        </li>
      <% end %>
      <% if @page < @dog_count - 1 %>
        <li class="page-item"><a class="page-link" href="/dogs?page=<%= @page + 1%>">Next</a></li>
      <% end %>
    </ul>
  </nav>
</navbar>
